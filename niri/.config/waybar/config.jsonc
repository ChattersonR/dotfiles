{
    "reload_style_on_change": true,
    "layer": "top",
    "position": "top",
    "height": 30,
    "spacing": 0,
    "margin": 0,
    "modules-left": [
        "group/hardware",
        "niri/workspaces",
        "niri/window"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "mpris",
//        "idle_inhibitor",
        "wireplumber#sink",
        "backlight",
        "network",
        "battery",
        "group/session",
        "tray"
    ],
    "mpris": {
        "title-len": 10,
        "artist-len": 10,
        "album-len": 5,
        "format": "{player_icon} {dynamic}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        }
        // "ignored-players": ["firefox"]
    },
    "niri/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": "ÔÜí",
            "default": "ÔÑë"
        }
    },
    "niri/window": {
    	"format": "Ôíà    {title}",
    	"rewrite": {
    		"(.*) - Mozilla Firefox": "üåé $1",
    		"(.*) - zsh": "> [$1]"
    	}
    },
    "custom/hardware-wrap": {
    	  "format": "Óú≤",
    	  "tooltip-format": "Resource Usage"
    },
    "group/hardware": {
        "orientation": "horizontal",
        "drawer": {
        	  "transition-duration": 500,
        	  "transition-left-to-right": true
        },
        "modules": [
        	  "custom/hardware-wrap",
            "power-profiles-daemon",
        	  "cpu",
        	  "memory",
        	  "temperature",
            "disk"
        ]
    },
    "custom/session-wrap": {
        "format": "Ôëñ",
    	  "tooltip-format": "Lock, Reboot, Shutdown"
    },
    "group/session": {
        "orientation": "horizontal",
        "drawer": {
        	  "transition-duration": 500,
        	  "transition-left-to-right": true
        },
        "modules": [
        	  "custom/session-wrap",
            "custom/lock",
            "custom/reboot",
            "custom/power"
        ]
    },
    "custom/lock": {
        "format": "ÔÄ£",
        "on-click": "swaylock -c 000000",
        "tooltip": true,
        "tooltip-format": "Lock screen"
    },
    "custom/reboot": {
        "format": "ÔÄ°",
        "on-click": "systemctl reboot",
        "tooltip": true,
        "tooltip-format": "Reboot"
    },
    "custom/power": {
        "format": "ÔÄë",
        "on-click": "systemctl poweroff",
        "tooltip": true,
        "tooltip-format": "Power Off"
    },
    "clock": {
        "format": "Û∞•î  {:%H:%M Û∞ÉÆ  %B %d, %Y}",
        "format-alt": "Û∞•î  {:%H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#d3c6aa'><b>{}</b></span>",
                "days": "<span color='#e67e80'>{}</span>",
                "weeks": "<span color='#a7c080'><b>W{}</b></span>",
                "weekdays": "<span color='#7fbbb3'><b>{}</b></span>",
                "today": "<span color='#dbbc7f'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "cpu": {
        "format": "Û∞òö {usage}%",
        "tooltip": true,
        "interval": 1,
        "on-click": "alacritty -e htop"
    },
    "memory": {
